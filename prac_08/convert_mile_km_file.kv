BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: ''
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Convert from mile to km0'
            on_press: app.calculate_mile_to_km()
        Label:
            id: output_label
            text: app.calculated_result
            font_size: 48
            color: (1, 1, 0, 1)
